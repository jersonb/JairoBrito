@model JairoBrito.WebApp.Models.MessageViewObject

@{
    ViewData["Title"] = "Jairo Brito - Deixe sua Mensagem";
}

<h1>Canal Direto</h1>

<h4>Me envie uma mensagem</h4>
<hr />

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="message-form-grid">
        <div class="container-1">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                <input asp-for="PhoneNumber" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Subject" class="control-label"></label>
                <span asp-validation-for="Subject" class="text-danger"></span>
                <input asp-for="Subject" class="form-control" />
            </div>
        </div>
        <div class="container-2">
            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <span asp-validation-for="Text" class="text-danger"></span>
                <textarea rows="10" asp-for="Text" class="form-control">
                </textarea>
            </div>
        </div>
        <div class="form-group ">
            <input type="submit" value="Enviar" class="btn btn-primary right" />
        </div>

    </div>
</form>

@if (ViewBag.Sucess != null)
{
    if (ViewBag.Sucess)
    {
        <partial name="_ToastSucess" view-data="ViewData" />
    }
    else
    {
        <partial name="_ToastError" view-data="ViewData" />
    }
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
